{
  "name": "ottomaton",
  "version": "0.11.0",
  "description": "A toolkit for writing automation script DSLs influenced by Cucumber.",
  "main": "lib/index.js",
  "bin": {
    "otto": "./lib/bin/otto.js"
  },
  "scripts": {
    "compile": "babel --source-maps true -d lib/ src/ && chmod +x lib/bin/otto.js",
    "clean": "rm -r lib",
    "pretest": "npm run compile",
    "test": "blue-tape test/*.js",
    "lint": "eslint --fix --config .eslintrc src/index.js src/bin/* test/*.js test/*/libraries/*.js",
    "prepublish": "npm run clean && npm run lint && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bmullan91/simple-factory"
  },
  "keywords": [
    "automation",
    "DSL"
  ],
  "author": "Allain Lalonde <allain.lalonde@gmail.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/allain/ottomaton/issues"
  },
  "homepage": "https://github.com/allain/ottomaton#readme",
  "dependencies": {
    "chalk": "^1.1.1",
    "debug": "^2.2.0",
    "defaults": "^1.0.3",
    "fj-flatten": "^1.0.0",
    "minimist": "^1.2.0",
    "native-promise-only": "^0.8.1",
    "promise-reduce": "^2.0.0",
    "simple-factory": "allain/simple-factory"
  },
  "devDependencies": {
    "babel": "^5.8.23",
    "blue-tape": "^0.1.10",
    "ducktype": "^1.1.0"
  }
}
